@model List<Movie>
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<form method="post" asp-action="Search" asp-controller="Movie">
    <p>
        Type: 
        <select name="value1">
            <option value="A">A</option>
            <option value="B">B</option>
        </select>
    </p>
    <input type="submit" />
</form>
@if (Model != null)
{
    @foreach (Movie i in Model)
    {
        <p>
            @($"{i.Id} - {i.Title} - {i.ReleasedTime} - {i.Type} - {i.Price}")
        </p>
    }
}

